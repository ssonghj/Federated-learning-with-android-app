<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CompleteTag"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/tag_layout"
        app:title="태그 완료 이미지"
        android:background="@drawable/round"
        app:titleTextColor="@color/design_default_color_primary_dark"
        android:elevation="20dp"
        />

    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="391dp"
        android:layout_margin="10dp"
        android:background="#59ffffff"
        tools:ignore="MissingConstraints"></ListView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/start_FL"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/btn_round"
            android:text="연합학습 시작"
            android:textColor="@color/design_default_color_primary_dark"></Button>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/linear_round"
            android:orientation="horizontal">

            <Button
                android:id="@+id/notCompleteTagBtn"
                android:layout_margin="10dp"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/btn_round"
                android:text="태그 미완료 이미지"
                android:textColor="@color/design_default_color_primary_dark"></Button>

            <Space
                android:layout_width="15dp"
                android:layout_height="wrap_content"></Space>

            <Button
                android:id="@+id/modifyBtn"
                android:layout_width="160dp"
                android:layout_margin="10dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/btn_round"
                android:text="사진선택"
                android:textColor="@color/design_default_color_primary_dark" />
        </LinearLayout>

    </LinearLayout>



</LinearLayout>
